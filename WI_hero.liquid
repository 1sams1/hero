{% capture aurastyle %}
  background: {{ section.settings.auracolor }};
  box-shadow: 0 4px 150px 300px {{ section.settings.aurashcolor }};
  right: {{ section.settings.hori }}%;
{% endcapture %}

{% capture headingstyle %}
  background: linear-gradient(
    {{ section.settings.gradeg }}deg,
    {{ section.settings.txtcolor1 }} 0%,
    {{ section.settings.txtcolor2 }} 100%
  );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  text-shadow: 0 0 14px rgba(255, 255, 255, 0.5);

  font-size: {{ section.settings.headingsize }}px;
  line-height: 1.2;

  width: 100%;
  margin: 0 0 {{ section.settings.headingbottomgap }}px;
{% endcapture %}

{% capture subheadingstyle %}
  width: 100%;
  margin: 0 0 {{ section.settings.parabottomgap }}px;

  font-size: {{ section.settings.parasize }}px;
  color: {{ section.settings.paracolor }};
  line-height: 1.2;
{% endcapture %}

{% capture buttonstyle %}
  display: flex;
  width: fit-content;
  padding: 12px 24px;

  font-size: {{ section.settings.btnfontsize }}px;
  color: {{ section.settings.btntxtcolor }};

  background: linear-gradient(
    {{ section.settings.gradeg }}deg,
    {{ section.settings.btncolor1 }} 0%,
    {{ section.settings.btncolor2 }} 100%
  );

  margin-bottom: {{ section.settings.btnbottomgap }}px;
{% endcapture %}

{% capture imageborderrad %}
  border-radius:
    {{ section.settings.toplrad }}px
    {{ section.settings.toprrad }}px
    {{ section.settings.bottomlrad }}px
    {{ section.settings.bottomrrad }}px;
{% endcapture %}

<div class="WI_hero_main">
    <div class="WI_hero_in" style="padding: {{ section.settings.ptop }}px {{ section.settings.pleft }}px {{ section.settings.pbottom }}px {{ section.settings.pright }}px;">
        {% comment %} Background image {% endcomment %}
        {% assign bgwidths = '240, 352, 832, 1200, 1600, 1920, 2560, 3840' %}
        <div class="WI_hero_bgimage" style="opacity: {{ section.settings.op }};">
            {{ section.settings.bgimg | image_url: width: 3840 | image_tag: widths: bgwidths, loading: "eager", fetchpriority: 'high' }}
        </div>
        {% comment %} Background aura {% endcomment %}
        <div class="WI_hero_aura" style="{{ aurastyle }}">

        </div>
        {% comment %} Image and text {% endcomment %}
         <div class="WI_hero_imgandtext" style="gap:{{ section.settings.gap }}px;">
            <div class="WI_hero_imgandtext_text">
                <div class="WI_hero_imgandtext_textin">
                    <h5 style="{{ headingstyle }}">
    {{ section.settings.heading }}
</h5>
<p style="{{ subheadingstyle }}">
{{ section.settings.para }}
</p>
<a href="{{ section.settings.btnurl }}" style="{{ buttonstyle }}">
    {{ section.settings.btntxt }}
</a>
<a href="{{ section.settings.linkurl }}" style="width: 100%; text-decoration: underline;font-size: {{ section.settings.linkfontsize }}px;color:{{ section.settings.linkcolor }};">
    {{ section.settings.linktxt }}
</a>
                </div>

            </div>
            <div class="WI_hero_imgandtext_img">
                {% assign widths = '240, 352, 832, 120, 1600, 1920' %}
                <div class="WI_hero_imgandtext_imgHolder" style="{{ imageborderrad }}">
                    {{ section.settings.img | image_url: width: 1920 | image_tag: widths: widths, loading: "eager", fetchpriority: 'high' }}
                </div>
            </div>
         </div>
        <div class="WI_hero_review">
            <section class="splide" aria-label="Splide Basic HTML Example" id="splide">
                <div class="splide__track">
                        <ul class="splide__list">
                            {% for block in section.blocks %}
