<style>
    /* ==============================
   Hero Base
============================== */

.WI_hero_main {
  width: 100%;
  height: auto;
  position: relative;
  overflow: hidden;
}

.WI_hero_in {
  width: 100%;
  height: auto;
}


/* ==============================
   Background
============================== */

.WI_hero_bgimage {
  width: 100%;
  height: 100%;
  position: absolute;
  inset: 0;
}

.WI_hero_bgimage img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


/* ==============================
   Aura
============================== */

.WI_hero_aura {
  position: absolute;
  width: 1px;
  height: 1px;
  bottom: 0;
  border-radius: 999px;
}


/* ==============================
   Layout
============================== */

.WI_hero_imgandtext {
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  margin-bottom: 48px;
}

.WI_hero_imgandtext_text,
.WI_hero_imgandtext_img {
  width: 50%;
  height: auto;
}

.WI_hero_imgandtext_text {
  display: flex;
  align-items: center;
}


/* ==============================
   Image
============================== */

.WI_hero_imgandtext_imgHolder {
  width: 100%;
  aspect-ratio: 3 / 2;
  background-color: #f2f2f2;
  position: relative;
  overflow: hidden;
}

.WI_hero_imgandtext_imgHolder img {
  width: 100%;
  height: 100%;
  position: absolute;
  inset: 0;
  object-fit: cover;
}


/* ==============================
   Divider
============================== */

.WI_hero_imgandtext_divider {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
}


/* ==============================
   Reviews
============================== */

.WI_hero_review {
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  justify-content: center;
}

.splide {
  width: 850px;
  border-top: 1px solid rgba(0, 0, 0, 0.5);
}

.WI_hero_review_slide {
  width: 100%;
  padding: 0 32px;
}

.WI_hero_review_slide p {
  width: 100%;
  margin: 0 0 16px;
  text-align: center;
  font-size: 22px;
  font-weight: 500;
  color: #000;
}

.WI_hero_review_slide_name {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 11px;
}


/* ==============================
   Splide Controls
============================== */

.splide .splide__arrow {
  width: 32px;
  height: 32px;
  border-radius: 0;
  border: 1px solid #000;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}

.splide .splide__arrow--next {
  right: 0;
}

.splide .splide__arrow--prev {
  left: 0;
}

.splide .splide__arrow:disabled {
  opacity: 0 !important;
}
.splide .splide__arrow svg{
    display: none;
}
.splide .splide__pagination__page {
  width: 8px !important;
  height: 8px !important;
}

.splide .splide__pagination__page.is-active {
  width: 8px;
  height: 8px;
  background-color: #000 !important;
  transform: scale(1) !important;
}

  .splide__arrow--prev {
  background: url('{{ "prev.svg" | asset_url }}') center no-repeat !important;
  background-size: 14px;
}

.splide .splide__arrow--next {
  background: url('{{ "next.svg" | asset_url }}') center no-repeat !important;
  background-size: 14px;
}

.splide .splide__pagination{
    bottom: 0px;
}


/* ==============================
   Responsive
============================== */

@media (max-width: 1024px) {

  .WI_hero_in {
    padding: 48px 20px !important;
  }

  .WI_hero_imgandtext {
    flex-wrap: wrap;
    gap: 24px !important;
  }

  .WI_hero_imgandtext_text,
  .WI_hero_imgandtext_img {
    width: 100%;
    justify-content: center;
  }

  .WI_hero_imgandtext_textin {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
  }

  .WI_hero_imgandtext_textin h5,
  .WI_hero_imgandtext_textin p,
  .WI_hero_imgandtext_textin a {
    text-align: center;
  }

  .splide {
    width: 100%;
  }

  .splide .splide__arrow {
    display: none;
  }

  .WI_hero_review_slide {
    padding: 0;
  }

}


</style>
